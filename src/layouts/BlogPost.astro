---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;

// ÌéòÏù¥ÏßÄ Í≤ΩÎ°úÏóê Îî∞Îùº ÌÉÄÏù¥ÌãÄ ÏÑ§Ï†ï
const pathname = Astro.url.pathname;
let pageTitle = `Blog | ${SITE_TITLE}`;
if (pathname.includes('/about')) {
	pageTitle = `About | ${SITE_TITLE}`;
}
---

<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={description} />
		<style>
			main {
				max-width: 1400px;
				width: 100%;
				margin: 0 auto;
				padding: 4em 2em;
			}
			article {
				width: 100%;
			}
			.hero-section {
				position: relative;
				width: 100%;
				margin-bottom: 4rem;
				overflow: hidden;
			}
			.hero-image {
				width: 100%;
				position: relative;
			}
			.hero-image::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				height: 200px;
				background: linear-gradient(to top, #050814 0%, transparent 100%);
				pointer-events: none;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
			}
			.article-header {
				position: relative;
				padding: 3rem 2rem;
				text-align: center;
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				border-radius: 20px;
				margin: -4rem 0 0 0;
				box-shadow: var(--neon-glow), 0 20px 60px rgba(0, 0, 0, 0.5);
			}
			.article-title {
				margin: 0 0 1.5rem 0;
				font-size: 3.5rem;
				line-height: 1.2;
				background: linear-gradient(135deg, rgb(var(--black)) 0%, var(--accent-glow) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.article-meta {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 1.5rem;
				flex-wrap: wrap;
			}
			.article-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				align-items: center;
			}
			.article-tag {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				background: rgba(79, 140, 255, 0.1);
				border: 1px solid var(--card-border);
				border-radius: 6px;
				color: var(--accent);
				font-size: 0.85rem;
				transition: all 0.3s ease;
			}
			.date {
				color: var(--accent);
				font-size: 0.95rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			.date::before {
				content: 'üìÖ';
				font-size: 1.1rem;
			}
			.last-updated-on {
				color: rgb(var(--gray));
				font-size: 0.85rem;
				font-style: italic;
			}
			.prose {
				max-width: 100%;
				margin: 4rem auto;
				padding: 0;
				color: rgb(var(--gray-dark));
			}
			.prose h2 {
				margin-top: 3rem;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid var(--card-border);
			}
			.prose h3 {
				margin-top: 2rem;
				color: var(--accent-glow);
			}
			.prose img {
				border-radius: 12px;
				border: 1px solid var(--card-border);
				box-shadow: var(--neon-glow);
				margin: 2rem 0;
			}
			.prose code {
				font-size: 0.9em;
			}
			@media (max-width: 1024px) {
				main {
					padding: 3em 1.5em;
				}
				.article-header {
					margin: -3rem 0 0 0;
					padding: 2.5rem 2rem;
				}
				.article-title {
					font-size: 2.5rem;
				}
			}
			@media (max-width: 720px) {
				main {
					padding: 2em 1em;
				}
				.article-header {
					margin: -2rem 0 0 0;
					padding: 2rem 1.5rem;
				}
				.article-title {
					font-size: 1.75rem;
					margin-bottom: 1rem;
				}
				.article-meta {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}
				.article-tags {
					width: 100%;
				}
				.prose {
					padding: 0 1rem;
					margin: 2rem auto;
					font-size: 0.95rem;
				}
				.hero-image::after {
					height: 100px;
				}
				.date {
					font-size: 0.9rem;
				}
				.article-tag {
					font-size: 0.8rem;
					padding: 0.3rem 0.6rem;
				}
			}
			@media (max-width: 480px) {
				main {
					padding: 1.5em 0.75em;
				}
				.article-header {
					margin: -1.5rem 0 0 0;
					padding: 1.5rem 1rem;
				}
				.article-title {
					font-size: 1.5rem;
				}
				.prose {
					padding: 0 0.75rem;
					margin: 1.5rem auto;
					font-size: 0.9rem;
				}
				.prose h2 {
					font-size: 1.5rem;
					margin-top: 2rem;
				}
				.prose h3 {
					font-size: 1.2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-section">
						<div class="hero-image">
							<Image width={1200} height={600} src={heroImage} alt="" />
						</div>
					</div>
				)}
				<div class="article-header">
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						{tags && tags.length > 0 && (
							<div class="article-tags">
								{tags.map((tag) => (
									<span class="article-tag">{tag}</span>
								))}
							</div>
						)}
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						{updatedDate && (
							<div class="last-updated-on">
								ÏóÖÎç∞Ïù¥Ìä∏: <FormattedDate date={updatedDate} />
							</div>
						)}
					</div>
				</div>
				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
