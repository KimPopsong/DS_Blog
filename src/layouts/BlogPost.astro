---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog' | 'project'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags, startDate, endDate, gitHub, gitHubPrivate, gitLab, gitLabPrivate, link, linkClosed, teamSize } = Astro.props;
const isProject = Astro.url.pathname.includes('/project/');

// ÌéòÏù¥ÏßÄ Í≤ΩÎ°úÏóê Îî∞Îùº ÌÉÄÏù¥ÌãÄ ÏÑ§Ï†ï
const pathname = Astro.url.pathname;
let pageTitle = `Blog | ${SITE_TITLE}`;
if (pathname.includes('/about')) {
	pageTitle = `About | ${SITE_TITLE}`;
}
---

<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={description} />
		<style>
			main {
				max-width: 1400px;
				width: 100%;
				margin: 0 auto;
				padding: 4em 2em;
			}
			article {
				width: 100%;
			}
			.hero-section {
				position: relative;
				width: 100%;
				margin-bottom: 4rem;
				overflow: hidden;
			}
			.hero-image {
				width: 100%;
				position: relative;
			}
			.hero-image::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				height: 200px;
				background: linear-gradient(to top, #050814 0%, transparent 100%);
				pointer-events: none;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 0;
			}
			.article-header {
				position: relative;
				padding: 3rem 2rem;
				text-align: center;
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				border-radius: 20px;
				margin: 0;
				box-shadow: var(--neon-glow), 0 20px 60px rgba(0, 0, 0, 0.5);
			}
			.hero-section + .article-header {
				margin: -4rem 0 0 0;
			}
			.article-title {
				margin: 0 0 1.5rem 0;
				font-size: 3.5rem;
				line-height: 1.2;
				background: linear-gradient(135deg, rgb(var(--black)) 0%, var(--accent-glow) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.article-meta {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 1.5rem;
				flex-wrap: wrap;
			}
			.article-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				align-items: center;
			}
			.article-tag {
				display: inline-block;
				padding: 0.4rem 0.8rem;
				background: rgba(79, 140, 255, 0.1);
				border: 1px solid var(--card-border);
				border-radius: 6px;
				color: var(--accent);
				font-size: 0.85rem;
				transition: all 0.3s ease;
			}
			.date {
				color: var(--accent);
				font-size: 0.95rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			.date::before {
				content: 'üìÖ';
				font-size: 1.1rem;
			}
			.last-updated-on {
				color: rgb(var(--gray));
				font-size: 0.85rem;
				font-style: italic;
			}
			.project-links {
				display: flex;
				gap: 1rem;
				align-items: center;
				flex-wrap: wrap;
			}
			.project-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.5rem 1rem;
				background: rgba(79, 140, 255, 0.1);
				border: 1px solid var(--card-border);
				border-radius: 8px;
				color: var(--accent);
				text-decoration: none;
				font-size: 0.9rem;
				transition: all 0.3s ease;
			}
			.project-link:hover {
				background: var(--accent);
				color: rgb(var(--black));
				border-color: var(--accent);
				transform: translateY(-2px);
				box-shadow: var(--neon-glow);
			}
			.project-link svg {
				flex-shrink: 0;
			}
			.project-team-size {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.5rem 1rem;
				background: rgba(79, 140, 255, 0.05);
				border: 1px solid var(--card-border);
				border-radius: 8px;
				color: rgb(var(--gray-dark));
				font-size: 0.9rem;
			}
			.prose {
				max-width: 100%;
				margin: 4rem auto;
				padding: 0;
				color: rgb(var(--gray-dark));
			}
			.prose h2 {
				margin-top: 3rem;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid var(--card-border);
			}
			.prose h3 {
				margin-top: 2rem;
				color: var(--accent-glow);
			}
			.prose img {
				border-radius: 12px;
				border: 1px solid var(--card-border);
				box-shadow: var(--neon-glow);
				margin: 2rem 0;
			}
			.prose code {
				font-size: 0.9em;
			}
			@media (max-width: 1024px) {
				main {
					padding: 3em 1.5em;
				}
				.hero-section + .article-header {
					margin: -3rem 0 0 0;
				}
				.article-header {
					padding: 2.5rem 2rem;
				}
				.article-title {
					font-size: 2.5rem;
				}
			}
			@media (max-width: 720px) {
				main {
					padding: 2em 1em;
				}
				.hero-section + .article-header {
					margin: -2rem 0 0 0;
				}
				.article-header {
					padding: 2rem 1.5rem;
				}
				.article-title {
					font-size: 1.75rem;
					margin-bottom: 1rem;
				}
				.article-meta {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}
				.article-tags {
					width: 100%;
				}
				.prose {
					padding: 0 1rem;
					margin: 2rem auto;
					font-size: 0.95rem;
				}
				.hero-image::after {
					height: 100px;
				}
				.date {
					font-size: 0.9rem;
				}
				.article-tag {
					font-size: 0.8rem;
					padding: 0.3rem 0.6rem;
				}
			}
			@media (max-width: 480px) {
				main {
					padding: 1.5em 0.75em;
				}
				.hero-section + .article-header {
					margin: -1.5rem 0 0 0;
				}
				.article-header {
					padding: 1.5rem 1rem;
				}
				.article-title {
					font-size: 1.5rem;
				}
				.prose {
					padding: 0 0.75rem;
					margin: 1.5rem auto;
					font-size: 0.9rem;
				}
				.prose h2 {
					font-size: 1.5rem;
					margin-top: 2rem;
				}
				.prose h3 {
					font-size: 1.2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<div class="hero-section">
						<div class="hero-image">
							<Image width={1200} height={600} src={heroImage} alt="" />
						</div>
					</div>
				)}
				<div class="article-header">
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						{startDate && endDate ? (
							<div class="date">
								{startDate.toISOString().split('T')[0]} ~ {endDate.toISOString().split('T')[0]}
							</div>
						) : (
							<div class="date">
								<FormattedDate date={pubDate} />
							</div>
						)}
						{updatedDate && (
							<div class="last-updated-on">
								ÏóÖÎç∞Ïù¥Ìä∏: <FormattedDate date={updatedDate} />
							</div>
						)}
						{isProject && (
							<div class="project-links">
								{gitHub && (
									<a href={gitHub} target="_blank" rel="noopener noreferrer" class="project-link">
										<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
										</svg>
										GitHub{gitHubPrivate && ' (Private)'}
									</a>
								)}
								{gitLab && (
									<a href={gitLab} target="_blank" rel="noopener noreferrer" class="project-link">
										<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"></path>
										</svg>
										GitLab{gitLabPrivate && ' (Private)'}
									</a>
								)}
								{link && (
									<a href={link} target="_blank" rel="noopener noreferrer" class="project-link">
										<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
											<polyline points="15 3 21 3 21 9"></polyline>
											<line x1="10" y1="14" x2="21" y2="3"></line>
										</svg>
										ÌôàÌéòÏù¥ÏßÄ{linkClosed && ' (ÌèêÏáÑ)'}
									</a>
								)}
								{teamSize && (
									<div class="project-team-size">
										üë• {teamSize}
									</div>
								)}
							</div>
						)}
						{tags && tags.length > 0 && (
							<div class="article-tags">
								{tags.map((tag) => (
									<span class="article-tag">{tag}</span>
								))}
							</div>
						)}
					</div>
				</div>
				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
