			html, body {
				min-height: 100vh;
				display: flex;
				flex-direction: column;
			}
			body {
				margin: 0;
			}
			main {
				max-width: 1400px;
				width: 100%;
				margin: 0 auto;
				padding: 4em 2em;
				flex: 1;
			}
			.hero-section {
				text-align: center;
				margin-bottom: 6rem;
			}
			.hero-title {
				font-size: 3rem;
				font-weight: 700;
				margin: 0 0 1.5rem 0;
				line-height: 1.1;
				color: rgb(var(--black));
				font-family: 'Malgun Gothic','Apple SD Gothic Neo','Noto Sans KR','Segoe UI','Roboto','Helvetica Neue',Arial,sans-serif;
				white-space: nowrap;
			}
			.typing-text {}
			.cursor-blink {
				animation: blink 1s step-end infinite;
				color: var(--accent);
			}
			@keyframes blink {
				0%, 100% { opacity: 1; }
				50% { opacity: 0; }
			}
			.hero-subtitle {
				font-size: 1.5rem;
				color: rgb(var(--gray-dark));
				margin-bottom: 3rem;
				line-height: 1.6;
			}
			.tech-stack {
				color: var(--accent);
				font-weight: 600;
				font-size: 1.2rem;
			}
			.cta-button {
				display: inline-block;
				padding: 1.2rem 3rem;
				background: var(--card-bg);
				border: 2px solid var(--accent);
				border-radius: 12px;
				color: var(--accent);
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.3s ease;
				box-shadow: var(--neon-glow);
			}
			.cta-button:hover {
				background: var(--accent);
				color: rgb(var(--black));
				transform: translateY(-3px);
				box-shadow: var(--neon-glow), 0 10px 30px rgba(79, 140, 255, 0.4);
			}
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 4rem;
			}
			.feature-card {
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				border-radius: 16px;
				padding: 2.5rem;
				transition: all 0.3s ease;
			}
			.feature-card:hover {
				border-color: var(--accent);
				transform: translateY(-5px);
				box-shadow: var(--neon-glow);
			}
			.feature-icon {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.feature-title {
				font-size: 1.5rem;
				margin: 0 0 1rem 0;
				color: rgb(var(--black));
			}
			.feature-description {
				color: rgb(var(--gray-dark));
				line-height: 1.7;
				margin: 0;
			}
			@media (max-width: 1024px) {
				main {
					padding: 3em 1.5em;
				}
				.hero-title {
					font-size: 2.5rem;
				}
			}
			@media (max-width: 720px) {
				main {
					padding: 2em 1em;
				}
				.hero-section {
					margin-bottom: 4rem;
				}
				.hero-title {
					font-size: 1.8rem;
					margin-bottom: 1rem;
				}
				.hero-subtitle {
					font-size: 1.1rem;
					margin-bottom: 2rem;
				}
				.cta-button {
					padding: 1rem 2rem;
					font-size: 1rem;
					width: 100%;
					text-align: center;
				}
				.features-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					margin-top: 3rem;
				}
				.feature-card {
					padding: 2rem 1.5rem;
				}
				.feature-icon {
					font-size: 2.5rem;
				}
				.feature-title {
					font-size: 1.3rem;
				}
			}
			@media (max-width: 480px) {
				main {
					padding: 1.5em 0.75em;
				}
				.hero-title {
					font-size: 1.5rem;
				}
				.hero-subtitle {
					font-size: 1rem;
				}
				.feature-card {
					padding: 1.5rem 1rem;
				}
			}
		</style>
