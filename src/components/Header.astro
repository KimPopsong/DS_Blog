					<!-- 인스타 로고 그룹 (중앙 기준 살짝 확대) -->
					<g
						transform="translate(16 16) scale(1.2) translate(-16 -16)"
					>
						<!-- 프레임 -->
						<rect
							x="8"
							y="8"
							width="16"
							height="16"
							rx="4.5"
							ry="4.5"
							fill="none"
							stroke="#050814"
							stroke-width="2.6"></rect>
						<!-- 렌즈 -->
						<circle
							cx="16"
							cy="16"
							r="4.8"
							fill="none"
							stroke="#050814"
							stroke-width="2.6"></circle>
						<!-- 플래시 점 -->
						<circle cx="21" cy="11" r="1.5" fill="#050814"></circle>
					</g>
				</svg>
			</a>

			<!-- Steam -->
			<a
				href="https://steamcommunity.com/id/kimds5344/"
				target="_blank"
				aria-label="Go to Steam"
			>
				<span class="sr-only">Go to Steam</span>
				<svg
					viewBox="0 0 256 256"
					width="32"
					height="32"
					aria-hidden="true"
					role="img"
				>
					<path
						fill="currentColor"
						d="M127.779 0C60.42 0 5.24 52.412 0 119.014l68.724 28.674a35.812 35.812 0 0 1 20.426-6.366c.682 0 1.356.019 2.02.056l30.566-44.71v-.626c0-26.903 21.69-48.796 48.353-48.796 26.662 0 48.352 21.893 48.352 48.796 0 26.902-21.69 48.804-48.352 48.804-.37 0-.73-.009-1.098-.018l-43.593 31.377c.028.582.046 1.163.046 1.735 0 20.204-16.283 36.636-36.294 36.636-17.566 0-32.263-12.658-35.584-29.412L4.41 164.654c15.223 54.313 64.673 94.132 123.369 94.132 70.818 0 128.221-57.938 128.221-129.393C256 57.93 198.597 0 127.779 0zM80.352 196.332l-15.749-6.568c2.787 5.867 7.621 10.775 14.033 13.47 13.857 5.83 29.836-.803 35.612-14.799a27.555 27.555 0 0 0 .046-21.035c-2.768-6.79-7.999-12.086-14.706-14.909-6.67-2.795-13.811-2.694-20.085-.304l16.275 6.79c10.222 4.3 15.056 16.145 10.794 26.46-4.253 10.314-15.998 15.195-26.22 10.895zm121.957-100.29c0-17.925-14.457-32.52-32.217-32.52-17.769 0-32.226 14.595-32.226 32.52 0 17.926 14.457 32.512 32.226 32.512 17.76 0 32.217-14.586 32.217-32.512zm-56.37-.055c0-13.488 10.84-24.42 24.2-24.42 13.368 0 24.208 10.932 24.208 24.42 0 13.488-10.84 24.421-24.209 24.421-13.359 0-24.2-10.933-24.2-24.42z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 2em;
		background: rgba(15, 20, 35, 0.8);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--card-border);
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
		transition: all 0.3s ease;
	}
	h2 a:hover {
		color: var(--accent);
		text-shadow: var(--neon-glow);
	}
	nav {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		max-width: 1400px;
		margin: 0 auto;
		padding: 1em 0;
		position: relative;
	}
	h2 {
		justify-self: start;
	}
	.internal-links {
		display: flex;
		gap: 0.5em;
		justify-self: center;
	}
	.social-links {
		justify-self: end;
	}
	nav a {
		padding: 0.75em 1.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
		border-radius: 4px;
	}
	nav a:hover {
		color: var(--accent-glow);
		background: rgba(79, 140, 255, 0.1);
	}
	nav a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
		text-shadow: var(--neon-glow);
	}
	.social-links {
		display: flex;
		align-items: center;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray-dark));
		padding: 0.5em;
		border-radius: 6px;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.social-links a:hover {
		color: var(--accent-glow);
		background: rgba(79, 140, 255, 0.1);
		transform: translateY(-2px);
		box-shadow: var(--neon-glow);
	}
	@media (max-width: 1024px) {
		nav {
			grid-template-columns: auto 1fr auto;
			gap: 1rem;
		}
		.internal-links {
			gap: 0.25em;
		}
		nav a {
			padding: 0.5em 0.75em;
			font-size: 0.9em;
		}
	}
	@media (max-width: 720px) {
		header {
			padding: 0 1em;
		}
		nav {
			grid-template-columns: 1fr;
			grid-template-rows: auto auto auto;
			gap: 1rem;
		}
		h2 {
			font-size: 1.1em;
			justify-self: start;
		}
		.internal-links {
			width: 100%;
			flex-wrap: wrap;
			gap: 0.25em;
			justify-self: start;
		}
		nav a {
			padding: 0.5em 0.75em;
			font-size: 0.85em;
		}
		.social-links {
			position: absolute;
			top: 1em;
			right: 1em;
			justify-self: end;
		}
		.social-links a {
			padding: 0.4em;
		}
		.social-links svg {
			width: 24px;
			height: 24px;
		}
	}
	@media (max-width: 480px) {
		.internal-links {
			gap: 0.15em;
		}
		nav a {
			padding: 0.4em 0.6em;
			font-size: 0.8em;
		}
	}
</style>
