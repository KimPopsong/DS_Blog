---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`Home | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1400px;
				width: 100%;
				margin: 0 auto;
				padding: 4em 2em;
			}
			.hero-section {
				text-align: center;
				margin-bottom: 6rem;
			}
			.hero-title {
				font-size: 5rem;
				font-weight: 700;
				margin: 0 0 1.5rem 0;
				line-height: 1.1;
				background: linear-gradient(135deg, rgb(var(--black)) 0%, var(--accent) 50%, var(--accent-glow) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				animation: gradient-shift 3s ease infinite;
				background-size: 200% 200%;
			}
			@keyframes gradient-shift {
				0%, 100% { background-position: 0% 50%; }
				50% { background-position: 100% 50%; }
			}
			.hero-subtitle {
				font-size: 1.5rem;
				color: rgb(var(--gray-dark));
				margin-bottom: 3rem;
				line-height: 1.6;
			}
			.cta-button {
				display: inline-block;
				padding: 1.2rem 3rem;
				background: var(--card-bg);
				border: 2px solid var(--accent);
				border-radius: 12px;
				color: var(--accent);
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.3s ease;
				box-shadow: var(--neon-glow);
			}
			.cta-button:hover {
				background: var(--accent);
				color: rgb(var(--black));
				transform: translateY(-3px);
				box-shadow: var(--neon-glow), 0 10px 30px rgba(79, 140, 255, 0.4);
			}
			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 4rem;
			}
			.feature-card {
				background: var(--card-bg);
				border: 1px solid var(--card-border);
				border-radius: 16px;
				padding: 2.5rem;
				transition: all 0.3s ease;
			}
			.feature-card:hover {
				border-color: var(--accent);
				transform: translateY(-5px);
				box-shadow: var(--neon-glow);
			}
			.feature-icon {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.feature-title {
				font-size: 1.5rem;
				margin: 0 0 1rem 0;
				color: rgb(var(--black));
			}
			.feature-description {
				color: rgb(var(--gray-dark));
				line-height: 1.7;
				margin: 0;
			}
			@media (max-width: 1024px) {
				main {
					padding: 3em 1.5em;
				}
				.hero-title {
					font-size: 4rem;
				}
			}
			@media (max-width: 720px) {
				main {
					padding: 2em 1em;
				}
				.hero-section {
					margin-bottom: 4rem;
				}
				.hero-title {
					font-size: 2.5rem;
					margin-bottom: 1rem;
				}
				.hero-subtitle {
					font-size: 1.1rem;
					margin-bottom: 2rem;
				}
				.cta-button {
					padding: 1rem 2rem;
					font-size: 1rem;
					width: 100%;
					text-align: center;
				}
				.features-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					margin-top: 3rem;
				}
				.feature-card {
					padding: 2rem 1.5rem;
				}
				.feature-icon {
					font-size: 2.5rem;
				}
				.feature-title {
					font-size: 1.3rem;
				}
			}
			@media (max-width: 480px) {
				main {
					padding: 1.5em 0.75em;
				}
				.hero-title {
					font-size: 2rem;
				}
				.hero-subtitle {
					font-size: 1rem;
				}
				.feature-card {
					padding: 1.5rem 1rem;
				}
			}
		</style>
