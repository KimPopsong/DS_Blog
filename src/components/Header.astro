---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/resume">Resume</HeaderLink>
			<HeaderLink href="/project">Project</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/KimPopsong" target="_blank">
				<span class="sr-only">Go to GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="https://www.instagram.com/kimds5344/" target="_blank" aria-label="Go to Instagram">
				<span class="sr-only">Go to Instagram</span>
				<svg
					viewBox="0 0 32 32"
					width="32"
					height="32"
					aria-hidden="true"
					role="img"
				>
					<!-- 배경: 원형 (GitHub 아이콘과 동일 크기) -->
					<circle cx="16" cy="16" r="16" fill="currentColor" />
					<!-- 인스타 프레임 (크기 ↑) -->
					<rect
						x="8"
						y="8"
						width="16"
						height="16"
						rx="4.5"
						ry="4.5"
						fill="none"
						stroke="#050814"
						stroke-width="2.6"
					/>
					<!-- 렌즈 (크기 ↑) -->
					<circle
						cx="16"
						cy="16"
						r="4.8"
						fill="none"
						stroke="#050814"
						stroke-width="2.6"
					/>
					<!-- 플래시 점 -->
					<circle
						cx="21"
						cy="11"
						r="1.5"
						fill="#050814"
					/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 2em;
		background: rgba(15, 20, 35, 0.8);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--card-border);
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
		transition: all 0.3s ease;
	}
	h2 a:hover {
		color: var(--accent);
		text-shadow: var(--neon-glow);
	}
	nav {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		max-width: 1400px;
		margin: 0 auto;
		padding: 1em 0;
		position: relative;
	}
	h2 {
		justify-self: start;
	}
	.internal-links {
		display: flex;
		gap: 0.5em;
		justify-self: center;
	}
	.social-links {
		justify-self: end;
	}
	nav a {
		padding: 0.75em 1.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
		border-radius: 4px;
	}
	nav a:hover {
		color: var(--accent-glow);
		background: rgba(79, 140, 255, 0.1);
	}
	nav a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
		text-shadow: var(--neon-glow);
	}
	.social-links {
		display: flex;
		align-items: center;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray-dark));
		padding: 0.5em;
		border-radius: 6px;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.social-links a:hover {
		color: var(--accent-glow);
		background: rgba(79, 140, 255, 0.1);
		transform: translateY(-2px);
		box-shadow: var(--neon-glow);
	}
	@media (max-width: 1024px) {
		nav {
			grid-template-columns: auto 1fr auto;
			gap: 1rem;
		}
		.internal-links {
			gap: 0.25em;
		}
		nav a {
			padding: 0.5em 0.75em;
			font-size: 0.9em;
		}
	}
	@media (max-width: 720px) {
		header {
			padding: 0 1em;
		}
		nav {
			grid-template-columns: 1fr;
			grid-template-rows: auto auto auto;
			gap: 1rem;
		}
		h2 {
			font-size: 1.1em;
			justify-self: start;
		}
		.internal-links {
			width: 100%;
			flex-wrap: wrap;
			gap: 0.25em;
			justify-self: start;
		}
		nav a {
			padding: 0.5em 0.75em;
			font-size: 0.85em;
		}
		.social-links {
			position: absolute;
			top: 1em;
			right: 1em;
			justify-self: end;
		}
		.social-links a {
			padding: 0.4em;
		}
		.social-links svg {
			width: 24px;
			height: 24px;
		}
	}
	@media (max-width: 480px) {
		.internal-links {
			gap: 0.15em;
		}
		nav a {
			padding: 0.4em 0.6em;
			font-size: 0.8em;
		}
	}
</style>
